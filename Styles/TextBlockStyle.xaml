<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--<Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="White"/>
    </Style>-->

    <Style x:Key="OrbitronStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="pack://application:,,,/HardwareMonitor;component/Fonts/#Orbitron" />
        <Setter Property="Foreground" Value="GhostWhite" />
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="TemperatureTitleStyle" BasedOn="{StaticResource OrbitronStyle}">
        <Setter Property="FontSize" Value="20" />
    </Style>

    <Style TargetType="TextBlock" x:Key="LoadTitleStyle" BasedOn="{StaticResource OrbitronStyle}">
        <Setter Property="FontSize" Value="30" />
    </Style>

    <Style TargetType="TextBlock" x:Key="ExtraInfoStyle" BasedOn="{StaticResource OrbitronStyle}">
        <Setter Property="FontSize" Value="15" />
    </Style>

    <Style x:Key="DigitalStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="pack://application:,,,/HardwareMonitor;component/Fonts/#DS-Digital" />
        <Setter Property="Foreground" Value="GhostWhite" />
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style x:Key="TemperatureStyle" TargetType="TextBlock" BasedOn="{StaticResource DigitalStyle}">
        <Setter Property="FontSize" Value="35"/>
    </Style>

    <Style x:Key="HourMinuteStyle" TargetType="TextBlock" BasedOn="{StaticResource DigitalStyle}">
        <Setter Property="FontSize" Value="50"/>
    </Style>

    <Style x:Key="YearMonthDayStyle" TargetType="TextBlock" BasedOn="{StaticResource DigitalStyle}">
        <Setter Property="FontSize" Value="25"/>
    </Style>

    <Style x:Key="LoadValueStyle" TargetType="TextBlock" BasedOn="{StaticResource DigitalStyle}">
        <Setter Property="FontSize" Value="30"/>
    </Style>
</ResourceDictionary>
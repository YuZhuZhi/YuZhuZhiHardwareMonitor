<Window x:Class="Hardware_Monitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hardware_Monitor"
        xmlns:controls="clr-namespace:Hardware_Monitor.Controls"
        mc:Ignorable="d"
        Title="YuZhuZhiMonitor" Height="400" Width="400"
        AllowsTransparency="False">
    <!--Background="#153243"-->
    <Window.Background>
        <ImageBrush ImageSource="pack://application:,,,/HardwareMonitor;component/Backgrounds/Helena.jpg"
                    Stretch="UniformToFill"
                    Opacity="0.5"/>
    </Window.Background>
    
    <Grid ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <!--<RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>-->
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <StackPanel.Resources>
                    <Style TargetType="controls:TemperatureControl">
                        <Setter Property="Margin" Value="0,0,0,10"/>
                    </Style>
                </StackPanel.Resources>
                <controls:TemperatureControl LeftTopText="CPU TEMP"
                                             Temperature="{Binding Sensors.DisplayCPUTemperature, Mode=OneWay}"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Stretch"/>

                <controls:TemperatureControl LeftTopText="GPU TEMP"
                                             Temperature="{Binding Sensors.DisplayGPUTemperature, Mode=OneWay}"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Stretch"/>
            </StackPanel>

            <controls:DigitalClockControl Grid.Column="1"
                                          HourMinuteText="{Binding Clock.HourMinute, Mode=OneWay}" 
                                          YearMonthDayText="{Binding Clock.YearMonthDay, Mode=OneWay}"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center"/>

        </Grid>

        <Grid Grid.Row="1" ShowGridLines="False">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <controls:LoadControl Grid.Column="0"
                                  Title="CPU%"
                                  LoadValue="{Binding Sensors.CPULoad, Mode=OneWay}"
                                  ExtraInfo="{Binding Sensors.DisplayCPUPower, Mode=OneWay}"
                                  VerticalAlignment="Stretch"
                                  HorizontalAlignment="Stretch"/>

            <controls:LoadControl Grid.Column="1"
                                  Title="GPU%"
                                  LoadValue="{Binding Sensors.GPULoad, Mode=OneWay}"
                                  ExtraInfo="{Binding Sensors.DisplayGPUPower, Mode=OneWay}"
                                  VerticalAlignment="Stretch"
                                  HorizontalAlignment="Stretch"/>

            <controls:LoadControl Grid.Column="2"
                                  Title="MEM%"
                                  LoadValue="{Binding Sensors.MemoryLoad, Mode=OneWay}"
                                  ExtraInfo="{Binding Sensors.DisplayMemoryUsed, Mode=OneWay}"
                                  VerticalAlignment="Stretch"
                                  HorizontalAlignment="Stretch"/>
        </Grid>
        
    </Grid>
</Window>
